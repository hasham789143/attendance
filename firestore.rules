
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      // Check for a custom claim on the user's auth token.
      // This is the most secure way to identify an admin.
      return isSignedIn() && request.auth.token.role == 'admin';
    }

    // Rules for user profile documents
    match /users/{userId} {
      // Allow a user to read their own profile. Admins can read any profile.
      allow read: if isSignedIn() && (isOwner(userId) || isAdmin());
      
      // Allow a user to create their own profile document.
      allow create: if isSignedIn() && isOwner(userId);

      // Allow a user to update their own profile. Admins can update any profile.
      allow update: if isSignedIn() && (isOwner(userId) || isAdmin());
      
      // Only admins can delete user profiles.
      allow delete: if isAdmin();
    }

    // Rules for the settings document
    match /settings/attendance {
      // Allow anyone to read the settings (needed for public registration page).
      allow get: if true;

      // Only admins can write to the settings document.
      allow write: if isAdmin();
    }

    // Rules for all session-related documents
    match /sessions/{document=**} {
        // Any authenticated user can read session information.
        allow read: if isSignedIn();

        // Only administrators can create, update, or delete session documents.
        allow write: if isAdmin();
    }

    // Rules for chat messages
    match /chats/{studentUid}/messages/{messageId} {
        // A user can read/write their own messages. Admins can read/write any message.
        allow read, write: if isSignedIn() && (isOwner(studentUid) || isAdmin());
    }
  }
}
