
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isSignedIn() && request.auth.token.role == 'admin';
    }

    // USER PROFILES
    // - A user can create their own profile.
    // - A user can read, update, and delete their own profile.
    // - An admin can read any user profile.
    match /users/{userId} {
      allow create: if isOwner(userId);
      allow read, update, delete: if isOwner(userId);
      allow list: if isAdmin();
    }
    
    // SETTINGS
    // - Anyone (including unauthenticated users) can read the settings.
    // - Only admins can update the settings.
    match /settings/attendance {
      allow get: if true;
      allow list, create, update, delete: if isAdmin();
    }
    
    // CHATS
    // - A user can read and write messages in their own chat.
    // - An admin can read and write messages in any chat.
    match /chats/{studentUid}/messages/{messageId} {
      allow read, write: if isOwner(studentUid) || isAdmin();
    }
    
    // SESSIONS
    // - Any authenticated user can read session information.
    // - Only admins can write to session documents.
    match /sessions/{document=**} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
